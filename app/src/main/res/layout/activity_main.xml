<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:id="@+id/ll_root"
    android:paddingRight="12dp"
    tools:context="com.yzy.test.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.yzy.library.HourglassView
            android:id="@+id/hv_01"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:hv_auto="false"
            app:hv_duration="6000"
            app:hv_flat="7.5"
            app:hv_leftAndRight_color="#000000"
            app:hv_sand_color="#000000"
            app:hv_topAndBottom_color="#000000"
            />

        <com.yzy.library.HourglassView
            android:id="@+id/hv_02"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            app:hv_auto="false"
            app:hv_duration="6000"
            app:hv_flat="3"
            app:hv_leftAndRight_color="#000000"
            app:hv_sand_color="#000000"
            app:hv_topAndBottom_color="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.yzy.library.HourglassView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/hv_03"
            app:hv_flat="9"
            />
        <com.yzy.library.HourglassView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:hv_duration="6000"
            app:hv_sand_color="#00B7EE"
            app:hv_flat="4"
            app:hv_auto="false"
            app:hv_leftAndRight_color="#00C4FF"
            app:hv_topAndBottom_color="#844F01"
            android:id="@+id/hv_04"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:text="开始"
            android:layout_height="40dp"
            android:id="@+id/btn_start"
            />
        <Button
            android:layout_width="100dp"
            android:text="暂停"
            android:layout_marginLeft="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_end"
            />

    </LinearLayout>


</LinearLayout>
